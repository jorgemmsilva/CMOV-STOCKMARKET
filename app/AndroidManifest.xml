<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stockmarket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    
    <application
        android:name="com.stockmarket.basics.StockManager"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stockmarket.main.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="com.example.stockmarket.ExploreActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="com.stockmarket.main.TabsActivity"
            android:label="@string/title_activity_tabs" 
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.stockmarket.main.DetailsComp"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
        </activity>
    </application>

</manifest>
